@page "/bill-list"
@using Gestion_Bunny.Services
@inject PageTitleService TitleService

<div class="pb-2 d-flex justify-content-between align-items-center">
    <h2>Factures en attente</h2>
    <div class="icon-container plus-container" @onclick="() => NavigateToBillPage()">
        <img class="plus" src="images/plus.svg" alt="Ajouter" />
    </div>
</div>


@if (billsPending == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>Actions</th>
                    <th>Numéro de facture</th>
                    <th>Nombre d’items</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var bill in billsPending)
                {
                    <tr>
                        <td>
                            <!-- Redirect icon -->
                            <div class="icon-container" @onclick="() => NavigateToBillPage(bill.Id)">
                                <img src="images/arrow-right-square-fill.svg" alt="Rediriger" />
                            </div>    

                        </td>

                        <td>@bill.Date.ToShortDateString()</td>
                        <td>@bill.TemperatureC</td>
                        <td>@bill.TemperatureF</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<div class="pb-2">
    <h2>Factures complétées</h2>
</div>

@if (billsComplete == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>Actions</th>
                    <th>Numéro de facture</th>
                    <th>Nombre d’items</th>
                    <th>Total</th>
                    <th>Facturé par</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var bill in billsComplete)
                {
                    <tr>
                        <td>
                            <!-- Printer icon -->
                            <div class="icon-container" @onclick="() => HandlePrintAction(bill.Id)">
                                <img src="images/printer-fill.svg" alt="Imprimer" />
                            </div>
                        </td>


                        <td>@bill.Date.ToShortDateString()</td>
                        <td>@bill.TemperatureC</td>
                        <td>@bill.TemperatureF</td>
                        <td>@bill.Summary</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {

    protected override void OnInitialized()
    {
        TitleService.Title = "Liste des factures";
    }


    private WeatherForecast[]? billsPending;
    private WeatherForecast[]? billsComplete;

    protected override async Task OnInitializedAsync()
    {
        // Simulate asynchronous loading to demonstrate a loading indicator
        await Task.Delay(500);

        var startDate = DateOnly.FromDateTime(DateTime.Now);
        var summaries = new[] { "Freezing", "Bracing", "Chilly", "Cool", "Mild", "Warm", "Balmy", "Hot", "Sweltering", "Scorching" };
        billsPending = Enumerable.Range(1, 5).Select(index => new WeatherForecast
            {
                Id = index,
                Date = startDate.AddDays(index),
                TemperatureC = Random.Shared.Next(-20, 55),
                Summary = summaries[Random.Shared.Next(summaries.Length)]
            }).ToArray();
        billsComplete = Enumerable.Range(1, 5).Select(index => new WeatherForecast
            {
                Id = index,
                Date = startDate.AddDays(index),
                TemperatureC = Random.Shared.Next(-20, 55),
                Summary = summaries[Random.Shared.Next(summaries.Length)]
            }).ToArray();
    }

    private class WeatherForecast
    {
        public int Id { get; set; }
        public DateOnly Date { get; set; }
        public int TemperatureC { get; set; }
        public string? Summary { get; set; }
        public int TemperatureF => 32 + (int)(TemperatureC / 0.5556);
    }

    // Méthode pour gérer l'action de redirection
    private void NavigateToBillPage(int billId = 0)
    {
        Console.WriteLine($"Navigation vers la page de facture avec ID : {billId}");
    }

    // Méthode pour gérer l'action d'impression
    private void HandlePrintAction(int billId)
    {
        Console.WriteLine($"Impression de la facture avec ID : {billId}");
    }
}
