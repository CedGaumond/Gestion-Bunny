@page "/order-summary"
@using Gestion_Bunny.Services
@inject PageTitleService TitleService
@inject NavigationManager Navigation

<div class="container d-flex justify-content-center mt-4">
    <div class="card p-4 shadow bg-dark text-light" style="max-width: 500px; width: 100%;">
        <h4 class="text-center mb-3">Commande #123467</h4>

        <div class="order-summary">
            @if (orderedIngredients.Any())
            {
                  <div class="d-flex justify-content-between align-items-center mb-3 border-bottom pb-2">
                     <div>
                        <span class="fw-bold">Item</span>
                    </div>
                    <div class="text-center">
                        <span class="fw-bold">Quantité</span>
                    </div>
                    <div class="text-end">
                        <span class="fw-bold">Sous-total</span>
                    </div>
                          </div>
                @foreach (var item in orderedIngredients)
                {
                    <div class="d-flex justify-content-between align-items-center mb-3 border-bottom pb-2">
                        <div>
                            <span class="fw-bold">@item.Name</span>
                            <small class="d-block">@item.Price.ToString("C")</small>
                        </div>
                        <div class="text-center">
                            <span class="fw-bold">@item.Quantity</span>
                        </div>
                        <div class="text-end">
                            <span class="fw-bold">@((item.Price * item.Quantity).ToString("C"))</span>
                        </div>
                    </div>
                }
          

                <div class="d-flex justify-content-between mt-3">
                    <strong>Total</strong>
                    <span class="fw-bold">@orderedIngredients.Sum(i => i.Price * i.Quantity).ToString("C")</span>
                </div>

                <div class="mt-3 d-grid gap-2">
                    <button class="btn btn-secondary">Annuler</button>
                    <button class="btn btn-primary">Commander</button>
                </div>
            }
            else
            {
                <p class="text-center text-muted">Aucun ingrédient dans la commande</p>
            }
        </div>
    </div>
</div>

@code {
    private List<OrderedIngredient> orderedIngredients = new();

    protected override async Task OnInitializedAsync()
    {
        TitleService.Title = "Résumé de la commande";

        // Simulated order data
        await Task.Delay(500);
        orderedIngredients = new List<OrderedIngredient>
        {
            new OrderedIngredient { Name = "Farine", Price = 14.00m, Quantity = 1 },
            new OrderedIngredient { Name = "Sucre", Price = 12.00m, Quantity = 2 },
            new OrderedIngredient { Name = "Beurre", Price = 10.00m, Quantity = 1 }
        };
    }

    private class OrderedIngredient
    {
        public string Name { get; set; } = "";
        public decimal Price { get; set; }
        public int Quantity { get; set; }
    }
}